/*Criar a tabela 'tb_cliente'*/

CREATE TABLE tb_cliente (
  idCliente INTEGER PRIMARY KEY,
  nomeCliente VARCHAR(100),
  cidadeCliente VARCHAR(40),
  estadoCliente VARCHAR(40),
  paisCliente VARCHAR(40)
);

/*Criar a tabela "tb_vendedor"*/

CREATE TABLE tb_vendedor (
  idVendedor INTEGER PRIMARY KEY,
  nomeVendedor VARCHAR(15),
  sexoVendedor SMALLINT,
  estadoVendedor VARCHAR(40)
);

/*Criar a tabela "tb_carro"*/

CREATE TABLE tb_carro (
  idCarro INTEGER PRIMARY KEY,
  kmCarro INTEGER,
  classiCarro VARCHAR(50),
  modeloCarro VARCHAR(80),
  anoCarro INTEGER,
  idcombustivel INTEGER,
  tipoCombustivel VARCHAR(20)
);

-- Criar uma tabela temporária apenas com as colunas necessárias que ficariam da tabela tb_locacao, eliminando colunas das tabelas de cliente, vendedor e carro, deixando apenas a primary key dessas tabelas para relaciona-las.
CREATE TABLE tb_locacao_temp AS
SELECT idLocacao, idCliente, idCarro, idVendedor, dataLocacao, horaLocacao, qtdDiaria, vlrDiaria, dataEntrega, horaEntrega
FROM tb_locacao;

-- Remover a tabela antiga
DROP TABLE tb_locacao;

-- Renomear a tabela temporária para o nome original
ALTER TABLE tb_locacao_temp
RENAME TO tb_locacao;
